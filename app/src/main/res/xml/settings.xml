<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Preference category for connection settings -->
    <PreferenceCategory android:title="@string/pref_connection_category">

        <!-- EditTextPreference for URL -->
        <EditTextPreference
            android:key="pref_database_url"
            android:title="@string/pref_database_url_title"
            android:summary="@string/pref_database_url_summary"
            android:inputType="textUri"
            android:dialogTitle="@string/pref_database_url_dialog_title"
            android:defaultValue="http://10.0.2.2" />

        <!-- EditTextPreference for Token -->
        <EditTextPreference
            android:key="pref_token"
            android:title="@string/pref_token_title"
            android:summary="@string/pref_token_summary"
            android:inputType="text"
            android:dialogTitle="@string/pref_token_dialog_title"
            android:defaultValue="" />

    </PreferenceCategory>

    <!-- Other preferences can be added here -->

</PreferenceScreen>
